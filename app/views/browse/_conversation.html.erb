    <div class="row">
        <div class="col-12 top-bar">
            <i class="fa fa-times fa-2x text-muted" id="close-conversation"></i>
            
            <% if @profile.image.attached? %>
                <%= link_to image_tag(@profile.image, width: "40px", height: "40px", class: "profile-thumb rounded-circle top-bar-circle"), "#" %>
            <% elsif @profile.image_social? %>
                <%= link_to image_tag(@profile.image_social, width: "40px", height: "40px", class: "rounded-circle mt-2 mb-4"), "#" %>
            <% else %>
                <%= link_to image_pack_tag('media/images/default-profile.png', width: "40px", height: "40px", class: "rounded-circle mt-2 mb-4"), "#" %> 
            <% end %>
            <p class="text-muted mt-2">You matched with <%= @profile.first_name %> on <%= @match.created_at.strftime("%d/%m/%Y") %>. </p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <% if @conversation.new_record? %>
                <div id="initiate-conversation" class="text-center">
                    <p class="mt-3"> You matched with <span> <%= @profile.first_name %> </span> <%= time_ago_in_words @match.created_at %> ago.</p>
                    <% if @profile.image.attached? %>
                        <%= link_to image_tag(@profile.image, width: "200px", height: "200px", class: "rounded-circle mt-2 mb-4"), "#" %>
                    <% elsif @profile.image_social? %>
                        <%= link_to image_tag(@profile.image_social, width: "200px", height: "200px", class: "rounded-circle mt-2 mb-4"), "#" %>
                    <% else %>
                        <%= link_to image_pack_tag('media/images/default-profile.png', width: "200px", height: "200px", class: "rounded-circle mt-2 mb-4"), "#" %>
                    <% end %>
                    <p> Send them a message and make them smile:) </p>
                </div>
              <% end %>

            <div id="conversation_messages"><%= render partial: "browse/messages" unless @conversation.new_record? %></div>
        </div>
    </div>
  
    <div class="row">
        <div class="col-12 mt-5 bottom-bar">
            <%= render partial: "browse/new_conversation" %>
        </div>
    </div>
