    <div class="row">
        <% @matches.each do |match| %>
            <div class="col-sm-4 mt-3">
            <% if match.image.attached? %>
                <div class="match-tile" data-id="<%= match.id %>" style="background-image: url('<%= url_for match.image %>')">
                    <p class="text-white"><%= match.first_name %></p>
                </div>
             <% elsif match.image_social? %>
                <div class="match-tile" data-id="<%= match.id %>" style="background-image: url('<%= image_url match.image_social %>')">
                    <p class="text-white"><%= match.first_name %></p>
                </div>
            <% else %>
                <div class="match-tile" data-id="<%= match.id %>" style="background-image: url('<%= asset_pack_url('media/images/default-profile.png') %>')">
                    <p class="text-white"><%= match.first_name %></p>
                </div>
            <% end %>
            </div>
        <% end %>
    </div>
