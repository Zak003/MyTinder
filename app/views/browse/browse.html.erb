<ul id="slides">
    <% @users.each_with_index do |user, i| %>
    <li class="slide <%= 'showing' if i == 0 %>" data-id="<%= user.id %>">
        <%= user.first_name %>
    </li>
    <% end %>
</ul>

<div id="slide-controls">
    <span id="decline"><i class="fas fa-times-circle fa-2x"></i></span>
    <span id="approve"><i class="fas fa-heart fa-2x"></i></span>
</div>
