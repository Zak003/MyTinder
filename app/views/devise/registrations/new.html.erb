<div class="container" style="margin-top: 20px;">
  <div class="row">
  <div class="card mb-4 rounded-3 shadow-sm">
    <h2 style="text-align: center; margin-top: 20px; margin-bottom: 20px;">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :job_studies %><br />
        <%= f.text_field :job_studies, autocomplete: "job_studies", :required => true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :location %><br />
        <%= f.text_field :location, autocomplete: "location", :required => true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :bornDate %><br />
        <%= f.text_field :bornDate, :required => true,
          data: {
            controller: "flatpickr",
            flatpickr_date_format: "d.m.Y",
          } %>
      </div>

      <div class="form-group">
        <%= f.label :description %><br />
        <%= f.text_field :description, autocomplete: "description", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "w-100 btn btn-primary btn-lg", style: "margin-bottom: 20px; margin-top: 20px;" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
