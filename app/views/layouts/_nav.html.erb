<div class="d-flex flex-column flex-md-row align-items-center pb-3 shadow-sm">
      <%= link_to image_pack_tag('tinder_icon.png', class: 'logo-navbar'), root_path %>
      <h5 class="my-0 mr-md-auto font-weight-normal" style="font-size: 30px; font-family: Verdana;">MyTinder</h5>

      <% if account_signed_in? %>

        <nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
          <%= link_to "Browse", browse_path, class: "me-3 py-2 text-dark text-decoration-none" %>
          <%= link_to "My Matches", matches_path, class: "me-3 py-2 text-dark text-decoration-none" %>
          <%= link_to "Settings", edit_account_registration_path, class: "me-3 py-2 text-dark text-decoration-none" %>
        </nav>

        <%= link_to "Sign out", destroy_account_session_path, method: :delete, class: "btn btn-secondary me-2" %>

        <% else %>
          <nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
          </nav>

        <%= link_to "Sign in", new_account_session_path, class: "w-25 btn btn-secondary me-2", style:"font-weight: bold;"%>
        <%= link_to "Sign up", new_account_registration_path, class: "w-15 btn btn-outline-primary me-3", style:"" %>

      <% end %>
</div>
  
